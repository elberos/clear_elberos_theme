<!-- SEO -->
{% if site.full_title %}
<title>{{ site.full_title }}</title>
{% endif %}
{% if site.description %}
<meta name="description" content="{{ site.description }}"/>
{% endif %}
{% if site.robots %}
<meta name="robots" content="{{ site.robots }}"/>
{% endif %}
{% if site.prev_url %}
<link rel="prev" href="{{ site.prev_url }}" />
{% endif %}
{% if site.next_url %}
<link rel="next" href="{{ site.next_url }}" />
{% endif %}
{% if site.language %}
<meta property="og:locale" content="{{ site.language }}">
{% endif %}
{% if site.og_type %}
<meta property="og:type" content="{{ site.og_type }}">
{% endif %}
{% if site.og_image %}
<meta property="og:image" content="{{ site.og_image }}">
{% endif %}
{% if site.full_title %}
<meta property="og:title" content="{{ site.full_title }}">
{% endif %}
{% if site.description %}
<meta property="og:description" content="{{ site.description }}">
{% endif %}
{% if site.url %}
<meta property="og:url" content="{{ site.canonical_url }}">
{% endif %}
{% if site.name %}
<meta property="og:site_name" content="{{ site.name }}">
{% endif %}
{% if site.article_publisher %}
<meta property="article:publisher" content="{{ site.article_publisher }}">
{% endif %}
{% if count(site.article_tags) > 0 %}
{% for tag in site.article_tags %}
<meta property="article:tag" content="{{ tag }}">
{% endfor %}
{% endif %}
{% if site.article_section %}
<meta property="article:section" content="{{ site.article_section }}">
{% endif %}
{% if site.article_published_time %}
<meta property="article:published_time" content="{{ site.article_published_time }}">
{% endif %}
{% if site.article_modified_time %}
<meta property="article:modified_time" content="{{ site.article_modified_time }}">
{% endif %}
{% if site.article_modified_time %}
<meta property="og:updated_time" content="{{ site.article_modified_time }}">
{% endif %}
<meta name="twitter:card" content="summary_large_image">
{% if site.full_title %}
<meta name="twitter:title" content="{{ site.full_title }}">
{% endif %}
{% if site.description %}
<meta name="twitter:description" content="{{ site.description }}">
{% endif %}
<!-- /SEO -->
